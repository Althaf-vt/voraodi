<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VOGUE - Customer Management</title>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Montserrat:wght@300;400;700&family=Playfair+Display:wght@400&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/ScrollTrigger.min.js"></script>
  <link rel="stylesheet" href="/admin/adminStyle.css">
</head>
<body>
  <!-- Include the Header (Navbar and Sidebar) -->
  <%- include('../../views/partials/admin/header') %>

  <!-- Main Content Wrapper -->
  <div class="main-content">
    <!-- Customer Management Header -->
    <div class="customer-management-header">
      <div class="text-container">
        <h1 id="typewriter">Customer Management</h1>
        <div class="subtitle">Oversee VOGUEâ€™s Clientele</div>
        <p>Administer with Authority</p>
      </div>
    </div>

    <!-- Customer List Section -->
    <div class="customer-list">
      <h2>Customer List</h2>
      <div class="customers-table">
        <table>
          <thead>
            <tr>
              <th>Customer ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (data && data.length > 0) { %>
              <% for(let i = 0; i < data.length; i++) { %>
                <tr>
                  <td>#CUST<%= String(i + 1 + (currentPage - 1) * 3).padStart(3, '0') %></td>
                  <td><%= data[i].name %></td>
                  <td><%= data[i].email %></td>
                  <td><%= data[i].phone %></td>
                  <td>
                    <span class="status <%= data[i].isBlocked ? 'blocked' : 'active' %>">
                      <%= data[i].isBlocked ? 'Blocked' : 'Active' %>
                    </span>
                  </td>
                  <td>
                    <% if (data[i].isBlocked === false) { %>
                      <button class="action-btn view-btn" aria-label="View Customer">View</button>
                      <button class="action-btn block-btn" aria-label="Block Customer">
                        <a href="/admin/blockCustomer?id=<%= data[i]._id %>">Block</a>
                      </button>
                    <% } else { %>
                      <button class="action-btn view-btn" aria-label="View Customer">View</button>
                      <button class="action-btn unblock-btn" aria-label="Unblock Customer">
                        <a href="/admin/unblockCustomer?id=<%= data[i]._id %>">Unblock</a>
                      </button>
                    <% } %>
                  </td>
                </tr>
              <% } %>
            <% } else { %>
              <tr>
                <td colspan="6">No customers found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination Section -->
    <div class="pagination">
      <nav aria-label="Page navigation">
        <ul class="pagination-list">
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>
  </div>

  <script>
    // Typewriter Effect
    const text = "Customer Management";
    let i = 0;
    function typeWriter() {
      if (i < text.length) {
        document.getElementById("typewriter").innerHTML = text.substring(0, i + 1);
        i++;
        setTimeout(typeWriter, 100);
      }
    }

    // Section Reveal Animation
    gsap.utils.toArray(".customer-list").forEach(section => {
      gsap.from(section, {
        opacity: 0,
        y: 30,
        duration: 1,
        scrollTrigger: {
          trigger: section,
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none none"
        }
      });
    });

    // Initialize
    window.onload = function() {
      typeWriter();
    };
  </script>
</body>
</html>