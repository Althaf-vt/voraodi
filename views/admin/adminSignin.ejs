<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VOGUE - Admin Command Access</title>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Montserrat:wght@300;400;700&family=Playfair+Display:wght@400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/admin/adminSigninStyle.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
</head>
<body>
  <section class="auth-section">
    <div class="auth-container">
      <h2 id="typewriter">Admin Command<br>Access</h2>
      <div class="subtitle">Secure Entry to the VOGUE Dominion</div>
      <form id="admin-signin-form" action="/admin/signin" method="POST">
        <div class="form-field">
          <label for="email">Admin Email</label>
          <input type="email" id="email" name="email" required>
          <span class="error-message" data-field="email"></span>
        </div>
        <div class="form-field">
          <label for="password">Master Key</label>
          <input type="password" id="password" name="password" required>
          <span class="error-message" data-field="password"></span>
        </div>
        <% if (locals.message && message.length > 0) { %>
          <div class="alert alert-danger text-center">
            <%= message %>
          </div>
        <% } %>
        <button type="submit" class="submit-btn">Grant Access</button>
      </form>
      <p class="link">Contact the VOGUE Council for access issues.</p>
    </div>
  </section>
<script>
  // Auto-hide the alert message after 5 seconds
  document.addEventListener("DOMContentLoaded", () => {
    const alertBox = document.querySelector('.alert');
    if (alertBox) {
      setTimeout(() => {
        alertBox.style.opacity = '0';
        alertBox.style.transition = 'opacity 0.5s ease';
        setTimeout(() => alertBox.remove(), 500); // fully remove from DOM
      }, 3000); // 5 seconds
    }
  });
</script>
  <script src="/admin/admin-signin.js"></script>
</body>
</html>