<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VOGUE - Admin Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Montserrat:wght@300;400;700&family=Playfair+Display:wght@400&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/ScrollTrigger.min.js"></script>
  <link rel="stylesheet" href="/admin/dashboardStyle.css">
</head>
<body>
  <!-- Include the Header (Navbar and Sidebar) -->
    <%- include('../../views/partials/admin/header') %>

  <!-- Main Content Wrapper -->
  <div class="main-content">
    <!-- Hero Section -->
    <div class="admin-hero">
      <div class="text-container">
        <h1 id="typewriter">Admin Command Center</h1>
        <div class="subtitle">Manage the Legacy of VOGUE</div>
        <p>Control with Precision</p>
      </div>
    </div>

    <!-- Dashboard Overview -->
    <div class="dashboard-overview">
      <h2>Dashboard Overview</h2>
      <div class="metrics-grid">
        <div class="metric-card">
          <h3>Total Sales</h3>
          <p>$125,430</p>
        </div>
        <div class="metric-card">
          <h3>New Orders</h3>
          <p>142</p>
        </div>
        <div class="metric-card">
          <h3>Active Users</h3>
          <p>3,245</p>
        </div>
        <div class="metric-card">
          <h3>Inventory Stock</h3>
          <p>2,890 Items</p>
        </div>
      </div>
    </div>

    <!-- Recent Orders -->
    <div class="recent-orders">
      <h2>Recent Orders</h2>
      <div class="orders-table">
        <table>
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Product</th>
              <th>Amount</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#VOG12345</td>
              <td>John Doe</td>
              <td>Legacy Monarch Suit</td>
              <td>$1,250.00</td>
              <td><span class="status shipped">Shipped</span></td>
              <td><button class="action-btn" aria-label="View Order">View</button></td>
            </tr>
            <tr>
              <td>#VOG12346</td>
              <td>Jane Smith</td>
              <td>Imperial Tailored Blazer</td>
              <td>$450.00</td>
              <td><span class="status pending">Pending</span></td>
              <td><button class="action-btn" aria-label="View Order">View</button></td>
            </tr>
            <tr>
              <td>#VOG12347</td>
              <td>Michael Brown</td>
              <td>Centurion Polo</td>
              <td>$145.00</td>
              <td><span class="status delivered">Delivered</span></td>
              <td><button class="action-btn" aria-label="View Order">View</button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Product Management -->
    <div class="product-management">
      <h2>Product Management</h2>
      <div class="management-grid">
        <div class="management-card">
          <h3>Add New Product</h3>
          <p>Create a new product listing for the VOGUE collection.</p>
          <button aria-label="Add Product">Add Product</button>
        </div>
        <div class="management-card">
          <h3>Edit Existing Products</h3>
          <p>Update product details, prices, or images.</p>
          <button aria-label="Edit Products">Edit Products</button>
        </div>
        <div class="management-card">
          <h3>Manage Inventory</h3>
          <p>Track and update stock levels for all products.</p>
          <button aria-label="Manage Inventory">Manage Inventory</button>
        </div>
      </div>
    </div>
  </div>

  <script>

  </script>
</body>
</html>