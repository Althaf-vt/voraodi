<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VOGUE - Old Money Menswear</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/user/homeStyle.css">
    <link rel="stylesheet" href="/user/footerStyle.css" />
</head>
<body>
    <%- include('../../views/partials/user/header') %>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Hero Banner -->
        <section class="hero-banner">
            <div class="hero-content">
                <h1>Timeless Elegance for the Modern Gentleman</h1>
                <p>Discover our curated collection of premium menswear</p>
                <a href="/shop" class="cta-button">Shop Now</a>
            </div>
        </section>

        <!-- Featured Categories -->
        <section class="featured-section">
            <div class="section-header">
                <h2>Featured Categories</h2>
                <div class="divider"></div>
            </div>
            
            <div class="category-grid">
                <div class="category-card">
                    <img src="/images/homePage-polo-img.png" alt="Polo Shirt">
                    <div class="category-overlay">
                        <h3>Polo Shirts</h3>
                        <a href="/shop?category=686d1caa670a70cef89a8570" class="category-link">Explore</a>
                    </div>
                </div>
                
                <div class="category-card">
                    <img src="/images/homePage-linen-img.png" alt="Linen Shirt">
                    <div class="category-overlay">
                        <h3>Linen Shirts</h3>
                        <a href="/shop?category=68564a01c1db78038ddc8d72" class="category-link">Explore</a>
                    </div>
                </div>
                
                <div class="category-card">
                    <img src="/images/homePage-linen-pant.png" alt="Linen Pant">
                    <div class="category-overlay">
                        <h3>Linen Pants</h3>
                        <a href="/shop?category=685649fbc1db78038ddc8d6b" class="category-link">Explore</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- New Arrivals -->
        <section class="new-arrivals">
            <div class="section-header">
                <h2>New Arrivals</h2>
                <div class="divider"></div>
                <a href="/shop" class="explore-all">View All</a>
            </div>
            
            <div class="product-grid">
                <% if (products && products.length > 0) { %>
                    <% for (let i = 0; i < products.length; i++) { %>
                        <div class="product-card">
                            <a href="/addToWishlist?<%= products[i]._id %>" style="text-decoration: none;">
                                <div class="wishlist" aria-label="Add to Wishlist">
                                    <i class="far fa-heart"></i>
                                </div>
                            </a>
                            <div class="image-container">
                                <a href="/productDetails/<%=products[i]._id%>">
                                    <img class="primary-img" 
                                         src="<%= products[i].productImage[0] %>" 
                                         alt="<%= products[i].productName %>">
                                </a>
                            </div>
                            <div class="details">
                                <h3><%= products[i].productName %></h3>
                                <div class="price-container">
                                    <span class="sale-price">₹<%=products[i].salePrice.toLocaleString('en-IN')%></span>
                                    <% if (products[i].regularPrice > products[i].salePrice) { %>
                                        <span class="regular-price"><strike>₹<%=products[i].regularPrice.toLocaleString('en-IN')%></strike></span>
                                    <% } %>
                                </div>
                                <button class="quick-view-btn" onclick="openQuickViewModal('<%= products[i]._id %>')">
                                    <i class="fas fa-eye"></i> Quick View
                                </button>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <p class="no-products">No products available.</p>
                <% } %>
            </div>
        </section>

        <!-- About Section -->
        <section class="about-section">
            <div class="about-content">
                <h2>Crafting Timeless Elegance</h2>
                <p>At VOGUE, we believe in the power of well-crafted clothing to transform not just your appearance, but your confidence. Each piece in our collection is carefully selected to embody the perfect balance of tradition and modernity.</p>
                <a href="/about" class="learn-more">Learn More</a>
            </div>
            <div class="about-image">
                <img src="https://images.unsplash.com/photo-1607346256330-dee7af15f7c5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1206&q=80" alt="About VOGUE">
            </div>
        </section>
    </div>

    <!-- Quick View Modal -->
    <div id="quickViewModal" class="quick-view-modal">
        <div class="quick-view-content">
            <span class="close-modal" onclick="closeQuickViewModal()">×</span>
            <div id="quickViewDetails">
                <!-- Content will be dynamically injected -->
            </div>
        </div>
    </div>

    <!-- Referral Modal -->
    <div id="referralModal" class="referral-modal">
        <div class="referral-modal-content">
            <h2>Enter Referral Code</h2>
            <p>Do you have a referral code? Enter it below to unlock exclusive benefits!</p>
            <input type="text" id="referralInput" class="referral-input" placeholder="Enter referral code" maxlength="20">
            <div class="referral-buttons">
                <button class="referral-submit" onclick="submitReferralCode(document.getElementById('referralInput').value)">Submit</button>
                <button class="referral-skip" onclick="skipReferralCode()">Skip</button>
            </div>
        </div>
    </div>
  
    <%- include('../../views/partials/user/footer') %>

    <script>
        async function toastMessage(data, type) {
            const message = data?.message ?? (type ? "Something went wrong" : "Updated successfully");

            Toastify({
                text: message,
                duration: 1500,
                close: true,
                gravity: "top",
                position: "right",
                stopOnFocus: true,
                style: {
                    background: type === "error" ? "#dc3545" : "#28a745",
                    borderRadius: "10px",
                    padding: "10px 20px",
                    fontWeight: "500",
                }
            }).showToast();
        }

        function showReferralModal() {
            document.getElementById('referralModal').style.display = 'block';
        }

        function hideModal() {
            document.getElementById('referralModal').style.display = 'none';
        }

        function skipReferralCode() {
            hideModal();
            document.body.classList.remove("blur-bg");
            // Optional: Mark that user skipped the referral code
            fetch('/skip-referral', { method: 'POST' });
        }

        // On homepage load
        window.addEventListener("DOMContentLoaded", async () => {
            const response = await fetch('/api/user/status');
            const user = await response.json();

            if (!user.hasEnteredReferralCode) {
                showReferralModal(); // Open modal
                document.body.classList.add("blur-bg"); // Apply blur
            }
        });
        
        async function submitReferralCode(code){
            const res = await fetch('/submit-referral',{
                method: "POST",
                headers: {'Content-Type':'application/json'},
                body: JSON.stringify({code})
            });

            const result = await res.json();
            if(result.success){
                hideModal()
                document.body.classList.remove("blur-bg");
                toastMessage(result);
            }else{
                toastMessage(result,'error')
            }
        }

        function openQuickViewModal(productId) {
            fetch(`/quickView?id=${productId}`)
                .then(res => res.json())
                .then(product => {
                    const modal = document.getElementById('quickViewModal');
                    const content = document.getElementById('quickViewDetails');

                    content.innerHTML = `
                        <h2>${product.productName}</h2>
                        <img src="${product.productImage[0]}" alt="${product.productName}" class="quick-view-img" />
                        <p>${product.description}</p>
                        <p>Price: ₹${product.salePrice.toLocaleString('en-IN')}</p>
                        <div class="modal-buttons">
                            <a href="/productDetails/${product._id}" class="modal-btn view-details">View Details</a>
                            <button class="modal-btn close-btn" onclick="closeQuickViewModal()">Continue Shopping</button>
                        </div>
                    `;

                    modal.style.display = 'block';
                })
                .catch(err => {
                    console.error('Quick View Error:', err);
                });
        }
        
        function closeQuickViewModal() {
            document.getElementById('quickViewModal').style.display = 'none';
        }
    </script>
</body>
</html>