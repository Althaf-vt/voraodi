<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Forgot Password</title>
  <link rel="stylesheet" href="/user/forgotPassword.css" />
  <link rel="stylesheet" href="/user/headerStyle.css" />
  <link rel="stylesheet" href="/user/footerStyle.css" />

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Optional Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <%- include('../../views/partials/user/header') %>
  
  <section class="auth-section">
    <div class="auth-container">
      <h2>Forgot Password</h2>
      <p class="instructions">Enter your email address below, and we'll send you an OTP to reset your password.</p>

      <!-- Display success/error messages from res.render -->
      <% if (locals.message && message.length > 0) { %>
        <div class="alert alert-danger text-center message-display">
          <%= message %>
        </div>
      <% } %>
      <% if (locals.successMessage && successMessage.length > 0) { %>
        <div class="alert alert-success text-center message-display">
          <%= successMessage %>
        </div>
      <% } %>

      <form id="forgot-password-form" action="/forgot-email-valid" method="POST">
        <div class="form-field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
          <span class="error-message" data-field="email"></span>
        </div>

        <% if(locals.message && message.length > 0) { %>
          <div class="alert alert-danger text-center">
            <%= message %>
          </div>
        <% } %>

        <button type="submit" class="submit-btn">Submit</button>
      </form>

      <p class="link">
        Don't have an account? <a href="/signup">Sign Up</a>
      </p>
    </div>
  </section>

  <%- include('../../views/partials/user/footer') %>

  <script>
  </script>

  <script src="/user/forgot-password.js"></script>
</body>
</html>