<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sign In</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/user/signinStyle.css">
  <link rel="stylesheet" href="/user/footerStyle.css" />
  <script src="https://unpkg.com/lucide@latest"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('../../views/partials/user/header') %>
  
  <main class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <i data-lucide="log-in" width="28" height="28" class="auth-icon"></i>
        <h1>Welcome Back</h1>
        <p>Sign in to your account</p>
      </div>

      <form id="signin-form" action="/signin" method="POST">
        <div class="form-field">
          <label for="email">
            <i data-lucide="mail" width="14" height="14"></i>
            Email
          </label>
          <input type="email" id="email" name="email" placeholder="your@email.com" />
          <span class="error-message" data-field="email"></span>
        </div>
        
        <div class="form-field">
          <label for="password">
            <i data-lucide="lock" width="14" height="14"></i>
            Password
          </label>
          <input type="password" name="password" placeholder="••••••••" />
          <a href="/forgot-password" class="forgot-password-link">
            Forgot Password?
            <i data-lucide="chevron-right" width="12" height="12"></i>
          </a>
          <span class="error-message" data-field="password"></span>
        </div>

        <% if(locals.message && message.length > 0) { %>
          <div class="alert alert-danger text-center">
            <%= message %>
          </div>
        <% } %>

        <button type="submit" class="submit-btn">
          Sign In
          <i data-lucide="arrow-right" width="16" height="16"></i>
        </button>
      </form>

      <div class="auth-divider">
        <span>or continue with</span>
      </div>

      <a href="/auth/google/signin" class="google-signin-btn">
        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" />
        Google Sign In
      </a>

      <div class="auth-footer">
        No account? <a href="/signup">Sign up</a>
      </div>
    </div>
  </main>

  <%- include('../../views/partials/user/footer') %>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://accounts.google.com/gsi/client" async defer></script>
  <script src="/user/google-signin.js"></script>
  <script src="/user/signin.js"></script>

  <!-- Message div timer -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const alertBox = document.querySelector('.alert.alert-danger');
      if (alertBox) {
        setTimeout(() => {
          alertBox.style.display = 'none';
        }, 3000); 
      }
      lucide.createIcons();
    });
  </script>
</body>
</html>