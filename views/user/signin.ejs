<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sign In</title>
  <link rel="stylesheet" href="/user/signinStyle.css">
  <link rel="stylesheet" href="/user/headerStyle.css" />
  <link rel="stylesheet" href="/user/footerStyle.css" />

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Optional Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <%- include('../../views/partials/user/header') %>
  
  <section class="auth-section">
    <div class="auth-container">
      <h2>Sign In</h2>

      <form id="signin-form" action="/signin" method="POST">
        <div class="form-field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" />
          <span class="error-message" data-field="email"></span>
        </div>
        <div class="form-field">
          <label for="password">Password</label>
          <input type="password" name="password" />

          <!-- Forgot Password Link -->
          <a href="/forgot-password" class="forgot-password-link">Forgot Password?</a>
          <span class="error-message" data-field="password"></span>
        </div>

        <% if(locals.message && message.length > 0) { %>
          <div class="alert alert-danger text-center">
            <%= message %>
          </div>
        <% } %>

        <button type="submit" class="submit-btn">Sign In</button>
      </form>

      <div class="auth-divider">or</div>

      <!-- Google Sign-in button outside the form -->
      <a href="/auth/google/signin" class="google-signin-btn" style="display: inline-flex; align-items: center; gap: 8px;">
        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" />
        Sign In with Google
      </a>

      <p class="link">
        Don't have an account? <a href="/signup">Sign Up</a>
      </p>
    </div>
  </section>

  <%- include('../../views/partials/user/footer') %>

  <script src="https://accounts.google.com/gsi/client" async defer></script>
  <script src="/user/google-signin.js"></script>
  <script src="/user/signin.js"></script>
</body>
</html>